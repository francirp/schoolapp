<h1>Listing assignments</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Subject</th>
      <th>Points</th>
      <th>Completed</th>
      <th>Due date</th>
      <th>Frequency</th>
      <th>Teacher</th>
      <th>Kid</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.time %></td>
        <td><%= assignment.subject %></td>
        <td><%= assignment.points %></td>
        <td><%= assignment.completed %></td>
        <td><%= assignment.due_date %></td>
        <td><%= assignment.frequency %></td>
        <td><%= assignment.teacher_id %></td>
        <td><%= assignment.kid_id %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

